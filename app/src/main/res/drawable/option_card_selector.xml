<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Marcado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF6EC"/> <!-- bege clarinho -->
            <stroke android:width="2dp" android:color="#F39A08"/> <!-- laranja -->
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="12dp"
                android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#D6D6D6"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="12dp"
                android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
