<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- mantém o visual, só que menor -->
    <style name="OptionCard.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- menos espaço externo entre as caixas -->
        <item name="android:layout_marginTop">8dp</item>

        <!-- altura mínima menor -->
        <item name="android:minHeight">48dp</item>   <!-- antes 64dp -->

        <!-- menos “gordura” interna -->
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

        <!-- fundo com estados (mesmo de antes) -->
        <item name="android:background">@drawable/option_card_selector</item>

        <!-- check à direita -->
        <item name="android:button">@drawable/checkbox_orange_selector</item>
        <item name="android:layoutDirection">rtl</item>

        <!-- texto um pouco menor -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:textColor">#000000</item>
    </style>



    <style name="OptionCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">16dp</item>

        <!-- Fundo com borda cinza e, quando marcado, fundo bege + borda laranja -->
        <item name="android:background">@drawable/option_card_selector</item>

        <!-- Ícone de marcação (quadradinho) à direita -->
        <item name="android:button">@drawable/checkbox_orange_selector</item>
        <item name="android:layoutDirection">rtl</item>

        <!-- Texto -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>


    <style name="RoundedImageSmall">
        <item name="cornerSize">12dp</item>
    </style>
</resources>